{
  "component_id": "bullet_box",
  "description": "Bullets enclosed in rectangular box with sharp corners and border. Professional, structured appearance for formal content.",
  "use_cases": [
    "formal lists",
    "structured content",
    "bordered sections",
    "boxed information",
    "professional bullets",
    "framed content"
  ],

  "template": "<div style=\"padding: 24px; background: {background}; border: 2px solid {border_color}; border-radius: 0;\"><h4 style=\"font-size: 28px; font-weight: 700; color: #1f2937; margin: 0 0 16px 0; line-height: 1.2; padding-bottom: 12px; border-bottom: 1px solid {border_color};\">{box_heading}</h4><ul style=\"list-style-type: disc; margin: 0; padding-left: 20px; font-size: 21px; line-height: 1.5; color: #374151;\"><li style=\"margin-bottom: 10px;\">{item_1}</li><li style=\"margin-bottom: 10px;\">{item_2}</li><li style=\"margin-bottom: 10px;\">{item_3}</li><li style=\"margin-bottom: 10px;\">{item_4}</li><li style=\"margin-bottom: 0;\">{item_5}</li></ul></div>",

  "wrapper_template": "<div style=\"display: grid; grid-template-columns: repeat({column_count}, 1fr); gap: 24px; padding: 0;\">{instances}</div>",

  "slots": {
    "box_heading": {
      "min_chars": 10,
      "max_chars": 35,
      "baseline_chars": 22,
      "description": "Heading for the boxed section",
      "format_hint": "title_case"
    },
    "item_1": {
      "min_chars": 25,
      "max_chars": 70,
      "baseline_chars": 48,
      "description": "First bullet item",
      "format_hint": "sentence"
    },
    "item_2": {
      "min_chars": 25,
      "max_chars": 70,
      "baseline_chars": 48,
      "description": "Second bullet item",
      "format_hint": "sentence"
    },
    "item_3": {
      "min_chars": 25,
      "max_chars": 70,
      "baseline_chars": 48,
      "description": "Third bullet item",
      "format_hint": "sentence"
    },
    "item_4": {
      "min_chars": 25,
      "max_chars": 70,
      "baseline_chars": 48,
      "description": "Fourth bullet item",
      "format_hint": "sentence"
    },
    "item_5": {
      "min_chars": 25,
      "max_chars": 70,
      "baseline_chars": 48,
      "description": "Fifth bullet item",
      "format_hint": "sentence"
    }
  },

  "variants": {
    "gray": {
      "background": "#ffffff",
      "border_color": "#d1d5db"
    },
    "blue": {
      "background": "#fafbff",
      "border_color": "#3b82f6"
    },
    "green": {
      "background": "#f0fdf4",
      "border_color": "#10b981"
    },
    "purple": {
      "background": "#faf5ff",
      "border_color": "#8b5cf6"
    },
    "amber": {
      "background": "#fffbeb",
      "border_color": "#f59e0b"
    }
  },

  "space_requirements": {
    "min_grid_width": 10,
    "min_grid_height": 8,
    "ideal_grid_width": 14,
    "ideal_grid_height": 10,
    "padding_px": 24
  },

  "arrangement_rules": {
    "min_instances": 1,
    "max_instances": 4,
    "valid_arrangements": ["single", "row_2", "row_3", "stacked_2", "stacked_3", "grid_2x2"],
    "gap_px": 24,
    "prefer_row": true
  },

  "scaling_rules": {
    "compress_slot": "item_5",
    "min_scale": 0.75,
    "expand_slot": "item_1",
    "max_scale": 1.15,
    "preserve_slots": ["box_heading"]
  }
}

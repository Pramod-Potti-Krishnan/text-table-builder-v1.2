{
  "component_id": "colored_section",
  "description": "Styled section card with gradient background, accent border, numbered badge, and arrow bullets. Perfect for categories, phases, or themed content groups.",
  "use_cases": [
    "categories",
    "phases",
    "topics",
    "grouped content",
    "themed sections",
    "bullet lists",
    "key points by category"
  ],

  "template": "<div style=\"background: {background}; border-left: 5px solid {heading_color}; border-radius: 0 12px 12px 0; padding: 20px 24px; margin-bottom: {margin_bottom}; box-shadow: 0 4px 12px {shadow};\"><h3 style=\"font-size: 24px; font-weight: 700; color: {heading_color}; margin: 0 0 14px 0; line-height: 1.2; display: flex; align-items: center;\"><span style=\"background: {heading_color}; color: white; width: 28px; height: 28px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-size: 14px; font-weight: 700; margin-right: 12px;\">{section_number}</span>{section_heading}</h3><ul style=\"list-style: none; margin: 0; padding: 0;\"><li style=\"display: flex; align-items: flex-start; margin-bottom: 8px; font-size: 18px; line-height: 1.5; color: #374151;\"><span style=\"color: {heading_color}; font-size: 16px; margin-right: 10px; margin-top: 2px;\">▸</span><span>{bullet_1}</span></li><li style=\"display: flex; align-items: flex-start; margin-bottom: 8px; font-size: 18px; line-height: 1.5; color: #374151;\"><span style=\"color: {heading_color}; font-size: 16px; margin-right: 10px; margin-top: 2px;\">▸</span><span>{bullet_2}</span></li><li style=\"display: flex; align-items: flex-start; margin-bottom: 0; font-size: 18px; line-height: 1.5; color: #374151;\"><span style=\"color: {heading_color}; font-size: 16px; margin-right: 10px; margin-top: 2px;\">▸</span><span>{bullet_3}</span></li></ul></div>",

  "wrapper_template": "<div style=\"padding: 0; margin: 0;\">{instances}</div>",

  "slots": {
    "section_heading": {
      "min_chars": 10,
      "max_chars": 30,
      "baseline_chars": 20,
      "description": "Heading for the section (e.g., 'Discovery Phase', 'Key Benefits')",
      "format_hint": "title_case"
    },
    "bullet_1": {
      "min_chars": 40,
      "max_chars": 100,
      "baseline_chars": 70,
      "description": "First bullet point",
      "format_hint": "sentence"
    },
    "bullet_2": {
      "min_chars": 40,
      "max_chars": 100,
      "baseline_chars": 70,
      "description": "Second bullet point",
      "format_hint": "sentence"
    },
    "bullet_3": {
      "min_chars": 40,
      "max_chars": 100,
      "baseline_chars": 70,
      "description": "Third bullet point",
      "format_hint": "sentence"
    }
  },

  "variants": {
    "blue": {
      "heading_color": "#2563eb",
      "background": "linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%)",
      "shadow": "rgba(37, 99, 235, 0.1)"
    },
    "red": {
      "heading_color": "#dc2626",
      "background": "linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%)",
      "shadow": "rgba(220, 38, 38, 0.1)"
    },
    "green": {
      "heading_color": "#10b981",
      "background": "linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%)",
      "shadow": "rgba(16, 185, 129, 0.1)"
    },
    "amber": {
      "heading_color": "#f59e0b",
      "background": "linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%)",
      "shadow": "rgba(245, 158, 11, 0.1)"
    },
    "purple": {
      "heading_color": "#7c3aed",
      "background": "linear-gradient(135deg, #faf5ff 0%, #ede9fe 100%)",
      "shadow": "rgba(124, 58, 237, 0.1)"
    }
  },

  "space_requirements": {
    "min_grid_width": 12,
    "min_grid_height": 3,
    "ideal_grid_width": 20,
    "ideal_grid_height": 4,
    "padding_px": 0
  },

  "arrangement_rules": {
    "min_instances": 1,
    "max_instances": 5,
    "valid_arrangements": ["single", "stacked_2", "stacked_3", "stacked_4", "stacked_5"],
    "gap_px": 16,
    "prefer_row": false
  },

  "scaling_rules": {
    "compress_slot": "bullet_3",
    "min_scale": 0.75,
    "expand_slot": "bullet_1",
    "max_scale": 1.15,
    "preserve_slots": ["section_heading"]
  }
}

{
  "component_id": "comparison_column",
  "description": "Styled comparison card with gradient header, rounded corners, box shadow, and bullet markers. Perfect for comparing options, pros/cons, or alternatives.",
  "use_cases": [
    "comparison",
    "pros and cons",
    "alternatives",
    "options",
    "versus",
    "before and after",
    "multiple categories"
  ],

  "template": "<div style=\"background: #ffffff; border-radius: 14px; overflow: hidden; box-shadow: 0 6px 20px {shadow};\"><div style=\"background: {gradient}; padding: 16px 20px;\"><h3 style=\"font-size: 28px; font-weight: 700; color: white; margin: 0;\">{column_heading}</h3></div><div style=\"padding: 18px; background: {content_background};\"><ul style=\"list-style-type: disc; margin: 0; padding-left: 20px;\"><li style=\"margin-bottom: 12px; font-size: 21px; line-height: 1.5; color: #374151;\">{item_1}</li><li style=\"margin-bottom: 12px; font-size: 21px; line-height: 1.5; color: #374151;\">{item_2}</li><li style=\"margin-bottom: 12px; font-size: 21px; line-height: 1.5; color: #374151;\">{item_3}</li><li style=\"margin-bottom: 12px; font-size: 21px; line-height: 1.5; color: #374151;\">{item_4}</li><li style=\"margin-bottom: 12px; font-size: 21px; line-height: 1.5; color: #374151;\">{item_5}</li><li style=\"margin-bottom: 12px; font-size: 21px; line-height: 1.5; color: #374151;\">{item_6}</li><li style=\"margin-bottom: 0; font-size: 21px; line-height: 1.5; color: #374151;\">{item_7}</li></ul></div></div>",

  "wrapper_template": "<div style=\"display: grid; grid-template-columns: repeat({column_count}, 1fr); gap: 24px; padding: 0; height: 100%; background: transparent; align-items: start;\">{instances}</div>",

  "slots": {
    "column_heading": {
      "min_chars": 8,
      "max_chars": 25,
      "baseline_chars": 16,
      "description": "Heading for the column (e.g., 'Option A', 'Pros', 'Before')",
      "format_hint": "title_case"
    },
    "item_1": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "First comparison point",
      "format_hint": "sentence"
    },
    "item_2": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Second comparison point",
      "format_hint": "sentence"
    },
    "item_3": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Third comparison point",
      "format_hint": "sentence"
    },
    "item_4": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Fourth comparison point",
      "format_hint": "sentence"
    },
    "item_5": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Fifth comparison point",
      "format_hint": "sentence"
    },
    "item_6": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Sixth comparison point",
      "format_hint": "sentence"
    },
    "item_7": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Seventh comparison point",
      "format_hint": "sentence"
    }
  },

  "variants": {
    "purple": {
      "gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
      "content_background": "linear-gradient(180deg, #f8f9ff 0%, #ffffff 100%)",
      "accent_color": "#667eea",
      "shadow": "rgba(102, 126, 234, 0.15)"
    },
    "pink": {
      "gradient": "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
      "content_background": "linear-gradient(180deg, #fff5f7 0%, #ffffff 100%)",
      "accent_color": "#f093fb",
      "shadow": "rgba(240, 147, 251, 0.15)"
    },
    "blue": {
      "gradient": "linear-gradient(135deg, #667eea 0%, #2563eb 100%)",
      "content_background": "linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%)",
      "accent_color": "#2563eb",
      "shadow": "rgba(37, 99, 235, 0.15)"
    },
    "green": {
      "gradient": "linear-gradient(135deg, #10b981 0%, #059669 100%)",
      "content_background": "linear-gradient(180deg, #ecfdf5 0%, #ffffff 100%)",
      "accent_color": "#10b981",
      "shadow": "rgba(16, 185, 129, 0.15)"
    },
    "orange": {
      "gradient": "linear-gradient(135deg, #f59e0b 0%, #ea580c 100%)",
      "content_background": "linear-gradient(180deg, #fffbeb 0%, #ffffff 100%)",
      "accent_color": "#f59e0b",
      "shadow": "rgba(245, 158, 11, 0.15)"
    }
  },

  "space_requirements": {
    "min_grid_width": 8,
    "min_grid_height": 10,
    "ideal_grid_width": 10,
    "ideal_grid_height": 14,
    "padding_px": 0
  },

  "arrangement_rules": {
    "min_instances": 1,
    "max_instances": 4,
    "valid_arrangements": ["single", "row_2", "row_3", "row_4"],
    "gap_px": 24,
    "prefer_row": true
  },

  "scaling_rules": {
    "compress_slot": null,
    "min_scale": 0.8,
    "expand_slot": null,
    "max_scale": 1.1,
    "preserve_slots": ["column_heading"]
  }
}

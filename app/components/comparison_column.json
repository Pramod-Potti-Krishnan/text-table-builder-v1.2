{
  "component_id": "comparison_column",
  "description": "Column with colored heading and bullet points. Perfect for comparing options, pros/cons, or alternatives.",
  "use_cases": [
    "comparison",
    "pros and cons",
    "alternatives",
    "options",
    "versus",
    "before and after",
    "multiple categories"
  ],

  "template": "<div><h3 style=\"color: {heading_color}; font-size: 28px; margin: 0 0 16px 0; font-weight: 700; border-bottom: 3px solid {heading_color}; padding-bottom: 10px;\">{column_heading}</h3><div style=\"font-size: 18px; line-height: 1.4; color: #1f2937;\"><p style=\"margin: 0 0 18px 0;\">{item_1}</p><p style=\"margin: 0 0 18px 0;\">{item_2}</p><p style=\"margin: 0 0 18px 0;\">{item_3}</p><p style=\"margin: 0 0 18px 0;\">{item_4}</p><p style=\"margin: 0 0 18px 0;\">{item_5}</p><p style=\"margin: 0 0 18px 0;\">{item_6}</p><p style=\"margin: 0;\">{item_7}</p></div></div>",

  "wrapper_template": "<div style=\"display: grid; grid-template-columns: repeat({column_count}, 1fr); gap: 28px; padding: 16px 40px 0 0; height: 100%; background: transparent; align-items: start;\">{instances}</div>",

  "slots": {
    "column_heading": {
      "min_chars": 8,
      "max_chars": 25,
      "baseline_chars": 16,
      "description": "Heading for the column (e.g., 'Option A', 'Pros', 'Before')",
      "format_hint": "title_case"
    },
    "item_1": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "First comparison point",
      "format_hint": "sentence"
    },
    "item_2": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Second comparison point",
      "format_hint": "sentence"
    },
    "item_3": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Third comparison point",
      "format_hint": "sentence"
    },
    "item_4": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Fourth comparison point",
      "format_hint": "sentence"
    },
    "item_5": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Fifth comparison point",
      "format_hint": "sentence"
    },
    "item_6": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Sixth comparison point",
      "format_hint": "sentence"
    },
    "item_7": {
      "min_chars": 30,
      "max_chars": 80,
      "baseline_chars": 55,
      "description": "Seventh comparison point",
      "format_hint": "sentence"
    }
  },

  "variants": {
    "blue": {
      "heading_color": "#1a73e8"
    },
    "red": {
      "heading_color": "#ea4335"
    },
    "green": {
      "heading_color": "#10b981"
    },
    "purple": {
      "heading_color": "#8b5cf6"
    },
    "orange": {
      "heading_color": "#f59e0b"
    }
  },

  "space_requirements": {
    "min_grid_width": 8,
    "min_grid_height": 10,
    "ideal_grid_width": 10,
    "ideal_grid_height": 14,
    "padding_px": 0
  },

  "arrangement_rules": {
    "min_instances": 2,
    "max_instances": 4,
    "valid_arrangements": ["row_2", "row_3", "row_4"],
    "gap_px": 28,
    "prefer_row": true
  },

  "scaling_rules": {
    "compress_slot": null,
    "min_scale": 0.8,
    "expand_slot": null,
    "max_scale": 1.1,
    "preserve_slots": ["column_heading"]
  }
}

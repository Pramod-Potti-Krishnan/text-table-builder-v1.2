{
  "component_id": "table_basic",
  "description": "Clean HTML table with header row and data rows. Professional styling with alternating row colors option.",
  "use_cases": [
    "data tables",
    "comparison tables",
    "feature matrices",
    "schedules",
    "specifications",
    "tabular data"

  "template": "<div style=\"flex: 1; width: 100%; overflow: hidden; border-radius: 8px; border: 1px solid #e5e7eb;\"><table style=\"width: 100%; height: 100%; border-collapse: collapse; font-size: 21px;\"><thead><tr style=\"background: {header_bg};\"><th style=\"padding: 14px 16px; text-align: left; font-weight: 700; color: {header_text}; border-bottom: 2px solid {border_color};\">{header_1}</th><th style=\"padding: 14px 16px; text-align: left; font-weight: 700; color: {header_text}; border-bottom: 2px solid {border_color};\">{header_2}</th><th style=\"padding: 14px 16px; text-align: left; font-weight: 700; color: {header_text}; border-bottom: 2px solid {border_color};\">{header_3}</th></tr></thead><tbody><tr style=\"background: #ffffff;\"><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row1_col1}</td><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row1_col2}</td><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row1_col3}</td></tr><tr style=\"background: #f9fafb;\"><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row2_col1}</td><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row2_col2}</td><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row2_col3}</td></tr><tr style=\"background: #ffffff;\"><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row3_col1}</td><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row3_col2}</td><td style=\"padding: 12px 16px; color: #374151; border-bottom: 1px solid #e5e7eb;\">{row3_col3}</td></tr><tr style=\"background: #f9fafb;\"><td style=\"padding: 12px 16px; color: #374151;\">{row4_col1}</td><td style=\"padding: 12px 16px; color: #374151;\">{row4_col2}</td><td style=\"padding: 12px 16px; color: #374151;\">{row4_col3}</td></tr></tbody></table></div>",

  "wrapper_template": "<div style=\"display: flex; flex-direction: column; gap: 24px; padding: 10px; width: 100%; height: 100%; box-sizing: border-box; align-items: center;\">{instances}</div>",


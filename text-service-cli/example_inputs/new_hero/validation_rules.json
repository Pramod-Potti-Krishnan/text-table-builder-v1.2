{
  "required_fields": ["title", "items"],
  "optional_fields": ["subtitle"],
  "field_validations": {
    "title": {
      "type": "string",
      "min_length": 10,
      "max_length": 50,
      "pattern": null,
      "error_message": "Title must be between 10 and 50 characters"
    },
    "subtitle": {
      "type": "string",
      "min_length": 20,
      "max_length": 100,
      "pattern": null,
      "error_message": "Subtitle must be between 20 and 100 characters"
    },
    "items": {
      "type": "array",
      "min_items": 3,
      "max_items": 6,
      "item_validation": {
        "text": {
          "type": "string",
          "min_length": 15,
          "max_length": 60
        },
        "number": {
          "type": "integer",
          "min": 1,
          "max": 10
        }
      },
      "error_message": "Items array must contain 3-6 agenda items"
    }
  },
  "content_rules": {
    "no_placeholder_text": true,
    "no_lorem_ipsum": true,
    "require_unique_items": true,
    "title_not_generic": {
      "blocked_phrases": ["Agenda", "Topics", "Overview", "Contents"],
      "message": "Title should be more specific than generic agenda headings"
    }
  },
  "retry_on_failure": true,
  "max_retries": 3
}

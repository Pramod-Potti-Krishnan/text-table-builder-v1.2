    "title": {"baseline": 40, "min": 30, "max": 50},
    "subtitle": {"baseline": 80, "min": 60, "max": 100},
    "item_1": {"baseline": 50, "min": 40, "max": 60},
    "item_2": {"baseline": 50, "min": 40, "max": 60},
    "item_3": {"baseline": 50, "min": 40, "max": 60},
    "item_4": {"baseline": 50, "min": 40, "max": 60},
    "item_5": {"baseline": 50, "min": 40, "max": 60},
    "item_6": {"baseline": 50, "min": 40, "max": 60}
  },
  "style_options": ["minimal", "corporate", "modern", "bold"],
  "dependencies": {
    "requires_presentation_context": true,
    "requires_slide_spec": true
  }
}

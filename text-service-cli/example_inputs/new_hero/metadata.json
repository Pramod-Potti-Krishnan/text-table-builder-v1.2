{
  "hero_type": "agenda",
  "display_name": "Agenda Slide",
  "description": "An agenda slide showing the outline and topics to be covered in the presentation.",
  "endpoint_path": "agenda",
  "generator_class": "AgendaSlideGenerator",
  "html_structure": {
    "title": "Main agenda title at the top",
    "subtitle": "Optional subtitle or description",
    "items": "List of 4-6 agenda items with numbers/bullets"
